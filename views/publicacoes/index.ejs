
<%- include('../header') %>

<br />
<a class='btn btn-success' href="/publicacoes/nova">Criar Nova Publicação</a> <br /> <br />

<table class="table table-bordered table-hover table-dark table-striped ">
    <thead>
      <tr>
        <th scope="col">PUBLICAÇÃO</th>
        <th scope="col">EDITAR</th>
        <th scope="col">EXCLUIR</th>
      </tr>
    </thead>
    <tbody>
            <% publicacoes.forEach(publicacao => { %>
      <tr>
     <th scope="row"><%= publicacao.titulo %> </th>
        <td>                          
                <a href="/publicacoes/editar/<%= categoria %>/<%= publicacao.id %>" > Editar</a>
        </td>
        <td>

                <a href="/publicacoes/excluir/<%= categoria %>/<%= publicacao.id %>" > Excluir </a>
        </td>
       
    </tr>
      <% }) %> 
    </tbody>
  </table>

<%- include('../footer')%>


